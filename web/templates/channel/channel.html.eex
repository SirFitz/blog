    <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
            <a class="btn-floating btn-large green">
              <i class="material-icons">mode_edit</i>
            </a>
            <ul>
              <li><a href ="#myModal" class="btn-floating yellow modal-trigger" data-toggle="modal" data-target="#myModal" style="transform: scaleY(0.4) scaleX(0.4) translateY(40px) translateX(0px); opacity: 0;"><i class="material-icons">add</i></a></li>

              <li><a href =" /channels/leave/<%=@channel.id%>/<%=@user.id%>"class="btn-floating  red darken-1" style="transform: scaleY(0.4) scaleX(0.4) translateY(40px) translateX(0px); opacity: 0;"><i class="material-icons">delete</i></a></li>
              <li><a href =" /channels/view/members/<%=@channel.id%>" class="btn-floating blue" style="transform: scaleY(0.4) scaleX(0.4) translateY(40px) translateX(0px); opacity: 0;"><i class="material-icons">face</i></a></li>

            </ul>
      </div>



      <div class="container">

        <!-- Trigger the modal with a button -->

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Create Post</h4>
              </div>
              <div class="modal-body">
                <form action="/channels/create/posts/<%=@channel.id%>" method="post">
                  <div class="row">
                    <input type="hidden" name="_csrf_token" value="<%= get_csrf_token() %>">

                    <div class="input-field col s12 m6">
                      <i class="material-icons prefix">mode_edit</i>
                      <input type="text" name="title" id="title"/>
                      <label style="font-size:20px;" for="title">Title</label>
                    </div>

                    <div class="input-field col s12 m6">
                      <i class="material-icons prefix">mode_edit</i>
                      <input type="text" name="tags" id="tags" placeholder="Place a comma between each tag like this: tag1,tag2"/>
                      <label style="font-size:20px;" for="tags">Tags</label>
                      <br/>

                    </div>


                    <div class="input-field col s12 m12">
                      <i class="material-icons prefix" style="color:black;">mode_edit</i>
                      <label style="font-size:20px;" for="body">
                        Content
                      </label>
                      <br/><br/>
                        <textarea name="body" id="body" rows="10"/></textarea>
                      </div>

                      <script>
                          CKEDITOR.replace( 'body' );
                      </script>



                    <div class="input-field col s12"
                      <span>
                          <button class="submit btn btn-primary waves-effect waves-light cyan">Submit</button>
                      </span>
                    </div>
                  </div>
                </form>
              </div>

          </div>


        </div>

