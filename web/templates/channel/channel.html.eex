        <section class="card-panel animated fadeInUpBig" style="animation-delay: 0.75s;">
        <%= for post <- @posts do %>

        <a class='dropdown-button right' href='#' data-activates='dropdown1'>  <i class="material-icons right">more_horiz</i></a>

         <!-- Dropdown Structure -->
         <ul id='dropdown1' class='dropdown-content'>

           <li><a href="#!">Hide</a></li>
           <li><a href="#!">Report</a></li>

         </ul>
        <div class="card-data">

           <time></time>
           <p> By: Jodi-Marie Taylor </p>
        </div>
        <!-- post wrapper -->
        <article class="post-entry" itemscope="" itemtype="http://schema.org/JobPosting">
          <div class="post-wrap">
              <header>
                <h5 class="post-title" itemprop="title">
                  <a href="https://www.jepozz.work/graduate-ux-designer" rel="bookmark" title="Permalink: Graduate UX Designer" class="jobpost-trigger"><%= post.title%></a>
                </h5>
              </header>
              <!-- post content -->
              <section class="post-content">
                  <div class="post-data">
                    <p></p><p><%= raw post.body%>      <p></p>
                  </div>

              </section>
               <!--! -->

          </div> <!-- ./ post-wrap -->

          <time class="post-time hide-on-med-and-down" datetime="2017-07-04 22:58" pubdate="">
            <i class="material-icons">schedule</i> <span><%=post.inserted_at %></span>
             <span itemprop="datePosted" class="hide"><%=post.inserted_at %></span>
          </time>
          <br>
          <div class="card-action row ">
                  <div class="col s4 card-action-share right">
                    <a href="#">Like</a> &nbsp
                    <a href="#">Share</a> &nbsp
                    <a href="#">Comment</a>

                  </div>


                </div>
        </article>
        <hr>
